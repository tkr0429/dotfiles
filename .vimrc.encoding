"デフォルトエンコード
set encoding=utf-8

"改行文字
set ffs=unix,dos,mac

"ファイルタイプ別のエンコーディング
autocmd FileType sql :set fileencoding=utf-8
autocmd FileType java :set fileencoding=utf-8
autocmd FileType scala :set fileencoding=utf-8
autocmd FileType js :set fileencoding=utf-8
autocmd FileType rb :set fileencoding=utf-8
autocmd FileType coffee :set fileencoding=utf-8
autocmd FileType ts :set fileencoding=utf-8
autocmd FileType groovy :set fileencoding=utf-8
autocmd FileType handlebars :set fileencoding=utf-8
